<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/vote_title"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:id="@+id/vote_title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lee_district"
        android:textColor="@color/black"
        android:layout_below="@+id/vote_title"
        android:id="@+id/location"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/obama"
        android:textColor="@color/dark_blue"
        android:id="@+id/obama"
        android:textSize="20sp"
        android:layout_below="@+id/location"
        android:layout_alignStart="@+id/vote_title"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/romney"
        android:textColor="@color/dark_red"
        android:layout_below="@+id/obama"
        android:id="@+id/romney"
        android:layout_alignStart="@+id/obama"
        android:textSize="20sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/obama_percent_d13"
        android:textColor="@color/dark_blue"
        android:id="@+id/obama_percent"
        android:textSize="20sp"
        android:layout_above="@+id/romney"
        android:layout_toEndOf="@+id/romney"
        android:layout_marginStart="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/romney_percent_d13"
        android:textColor="@color/dark_red"
        android:id="@+id/romney_percent"
        android:textSize="20sp"
        android:layout_alignStart="@+id/obama_percent"
        android:layout_below="@+id/obama_percent"/>


</RelativeLayout>